rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages access to individual survey documents.
     * @path /surveys/{docId}
     * @allow (get, list): Any user can read survey data.
     * @deny (create, update, delete): No user can write survey data.
     * @principle Allows public read access and prevent any writes.
     */
    match /surveys/{docId} {
      // Allow anyone to read survey data
      allow get, list: if true;

      // Prevent any writes (create, update, delete)
      allow create, update, delete: if false;
    }
  }
}